VERCEL_ENV=production
VERCEL_REGION=iad1

# Render Configuration
RENDER_SERVICE_ID=auto-generated-by-render
RENDER_GIT_COMMIT=auto-generated-by-render

# Build Configuration
NODE_OPTIONS=--max-old-space-size=4096
BUILD_TIMEOUT=300

# =============================================================================
# üîß DEVELOPMENT ONLY
# =============================================================================

# Debug Flags (Development only)
