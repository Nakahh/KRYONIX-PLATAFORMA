# üîê KRYONIX - Environment Variables Template
# Copy this file to .env.local for development
# Configure these variables in Vercel and Render dashboards for production

# =============================================================================
# üåê FRONTEND VARIABLES (Vercel)
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_URL=https://kryonix-backend.onrender.com
NEXT_PUBLIC_SITE_URL=https://kryonix.vercel.app
NEXT_PUBLIC_ENV=production

# Security
NEXTAUTH_SECRET=seu-secret-super-seguro-de-no-minimo-32-caracteres
NEXTAUTH_URL=https://kryonix.vercel.app
JWT_SECRET=seu-jwt-secret-super-seguro-aqui
ADMIN_TOKEN=seu-admin-token-para-dashboard

# Build Optimization
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# =============================================================================
# üõ†Ô∏è BACKEND VARIABLES (Render)
# =============================================================================

# Core Configuration
NODE_ENV=production
PORT=8080
HOSTNAME=0.0.0.0

# Database (Auto-configured by Render)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Auto-configured by Render)
REDIS_URL=redis://host:port

# Security (Generate values in Render dashboard)
WEBHOOK_SECRET=seu-webhook-secret-para-github
JWT_SECRET=seu-jwt-secret-igual-ao-frontend
ENCRYPTION_KEY=sua-chave-de-encriptacao-32-chars
SESSION_SECRET=seu-session-secret-super-seguro

# CORS Configuration - CRITICAL!
CORS_ORIGINS=https://kryonix.vercel.app,https://kryonix.com.br,https://www.kryonix.com.br

# Feature Flags
AUTO_MIGRATE=true
AUTO_BACKUP=true
HEALTH_CHECK_ENABLED=true
MONITORING_ENABLED=true
GITHUB_WEBHOOK_ENABLED=true

# =============================================================================
# üì± WHATSAPP INTEGRATION
