{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://kryonix-backend.onrender.com",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://kryonix-backend.onrender.com",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "app/api/**": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/pt-br",
      "permanent": false
    },
    {
      "source": "/home",
      "destination": "/pt-br",
      "permanent": true
    },
    {
      "source": "/en/home",
      "destination": "/en",
      "permanent": true
    },
    {
      "source": "/es/home", 
      "destination": "/es",
      "permanent": true
    },
    {
      "source": "/de/home",
      "destination": "/de", 
      "permanent": true
    },
    {
      "source": "/fr/home",
      "destination": "/fr",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://kryonix-backend.onrender.com/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}