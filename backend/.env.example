# KRYONIX Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=8080
FRONTEND_URL=https://kryonix-frontend.vercel.app
ALLOWED_ORIGINS=https://kryonix-frontend.vercel.app,https://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kryonix_platform
DB_USER=kryonix
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://kryonix:password@localhost:5432/kryonix_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here
WEBHOOK_SECRET=Kr7$n0x-V1t0r-2025-#Jwt$3cr3t-P0w3rfu1-K3y-A9b2Cd8eF4g6H1j5K9m3N7p2Q5t8

# Keycloak SSO
KEYCLOAK_URL=https://auth.kryonix.com.br
KEYCLOAK_REALM=kryonix
KEYCLOAK_CLIENT_ID=kryonix-platform
KEYCLOAK_CLIENT_SECRET=your_keycloak_secret

# Evolution API (WhatsApp)
EVOLUTION_API_URL=https://api.kryonix.com.br
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_WEBHOOK_URL=https://kryonix-backend.onrender.com/api/webhooks/whatsapp

# Storage (MinIO/AWS S3)
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=storage.kryonix.com.br
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=kryonix-files

# AI Services
OLLAMA_URL=http://localhost:11434
DIFY_API_URL=https://ai.kryonix.com.br
DIFY_API_KEY=your_dify_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@kryonix.com.br
SMTP_PASSWORD=your_smtp_password

# Monitoring & Logs
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
ANALYTICS_API_KEY=your_analytics_key

# Multi-tenancy
DEFAULT_TENANT=system
TENANT_ISOLATION_MODE=schema
ENABLE_TENANT_CREATION=true

# Features
ENABLE_AI_AUTOMATION=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_AUTO_BACKUP=true
ENABLE_MONITORING=true
